<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.apps.jjdaz.fueltracker.NewEntry"
    android:weightSum="1">
    <TextView
        android:id="@+id/NewEntryTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Entry: "
        android:singleLine="false"
        android:textSize="25dp"
        android:layout_weight="0.25" />
    <TextView
        android:id="@+id/dateentrytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Date(YYYY-MM-DD):"/>
    <EditText
        android:id="@+id/dateentry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" />
    <TextView
        android:id="@+id/stationentrytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Station:"/>
    <EditText
        android:id="@+id/stationentry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" />
    <TextView
        android:id="@+id/kmentrytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Odometer value:"/>
    <EditText
        android:id="@+id/kmentry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" />
    <TextView
        android:id="@+id/fueltypeentrytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Fuel Grade: "/>
    <EditText
        android:id="@+id/fueltypeentry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" />
    <TextView
        android:id="@+id/fuelamountentrytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Fuel Amount: "/>
    <EditText
        android:id="@+id/fuelamountentry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" />
    <TextView
        android:id="@+id/unitcostentrytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Unit Cost:"/>
    <EditText
        android:id="@+id/unitcostentry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" />
    <TextView
        android:id="@+id/fuelcosttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Fuel Price: *Add computed value*"
        android:layout_weight="0.48" />
    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clear" />
    <Button
        android:id="@+id/save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/save" />

</LinearLayout>
